<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyOTP1"
    android:background="#dfe6e9">

    <ScrollView
        android:id="@+id/scroll_view_reg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="OTP Verification"
                android:textAlignment="center"
                android:textColor="@color/material_dynamic_neutral0"
                android:textColorHighlight="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textotp"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_below="@id/verify"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Enter the sent OTP"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/otpfill"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/textotp"
                android:layout_margin="10dp"
                android:background="#dfe6e9"
                android:ems="10"
                android:gravity="center"
                android:hint="......"
                android:inputType="number"
                android:letterSpacing="0.5"
                android:maxLength="6"
                android:padding="5dp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="76dp" />

            <Button
                android:id="@+id/idBtnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/otpfill"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="150dp"
                android:elevation="10dp"
                android:text="Verify OTP"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>